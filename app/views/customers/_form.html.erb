    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="form-actions">
    <%= f.submit  :class => "btn btn-primary"%> <%= link_to 'Back', customers_path, :class => "btn" %>
