<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Street:</strong>
  <%= @customer.street %>
</p>

<p>
  <strong>Zip code:</strong>
  <%= @customer.zip_code %>
</p>

<p>
  <strong>State:</strong>
  <%= @customer.state %>
</p>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
<%= link_to 'New Order for this Customer', new_order_path(:customer => @customer.id) %>
<%= link_to 'New ContactPerson for this Customer', new_contactperson_path(:customer => @customer.id) %>

<p><br/></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Apl</th>
      <th>Ext</th>
      <th>Customer</th>
      <th>Contactperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.apl %></td>
        <td><%= order.ext %></td>
        <td><%= order.customer_id %></td>
        <td><%= order.contactperson_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
